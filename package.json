{
	"name": "vue3compnent",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"commit": "git-cz",
		"dev": "vite",
		"build": "vue-tsc -b && vite build",
		"lint:prettier": "prettier --write **/*.{js,ts,json,css,less,vue,md}",
		"lint:eslint": "eslint src --ext .js,.vue,.ts,.jsx,.tsx --ignore-path .gitignore --fix",
		"lint:style": "stylelint --config .stylelintrc.js src/**/*.{less,css,scss}",
		"lint:stylelint": "stylelint \"**/*.{vue,less,css,scss}\" --fix",
		"prepare": "husky install",
		"preview": "vite preview"
	},
	"dependencies": {
		"commitlint-config-cz": "^0.13.3",
		"cz-customizable": "^7.0.0",
		"eslint-plugin-vue": "^9.26.0",
		"lint-staged": "^15.2.7",
		"postcss-html": "^1.7.0",
		"postcss-less": "^6.0.0",
		"rollup-plugin-brotli": "^3.1.0",
		"stylelint-config-standard-vue": "^1.0.0",
		"stylelint-less": "1.0.6",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^3.0.0",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-webpackchunkname": "^1.0.3",
		"vue": "^3.4.29",
		"vue-router": "^4.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.2.0",
		"@commitlint/config-conventional": "19.1.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"@vitejs/plugin-vue": "^5.0.5",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"less": "^4.2.0",
		"prettier": "3.2.5",
		"stylelint": "^14.16.1",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recommended-less": "^1.0.4",
		"stylelint-config-standard": "^29.0.0",
		"typescript": "^5.2.2",
		"vite": "^5.3.1",
		"vue-tsc": "^2.0.21"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint --config .commitlintrc.js -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		".{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
			"prettier --write--parser json"
		],
		"package.json": [
			"prettier --write"
		],
		"**.vue": [
			"eslint --fix",
			"prettier --write",
			"stylelint --fix"
		],
		"*.{scss,less,css}": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		]
	}
}
